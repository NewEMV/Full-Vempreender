
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permite que qualquer pessoa leia os posts do blog
    match /posts/{postId} {
      allow read: if true;
      allow write: if false; // Ninguém pode escrever, exceto pelo console do Firebase
    }

    // Bloqueia o acesso a qualquer outra coleção por padrão
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
